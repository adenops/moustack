#!/bin/sh

if [ -z "${LXC_NAME}" -o -z "${LXC_ROOTFS_MOUNT}" ]; then
	echo "This hook must be ran by lxc-start"
	exit 1
fi

if [ -z "${MOUSTACK_WORKDIR}" ]; then
	exit 0
fi

# create destination directory
mkdir -p ${LXC_ROOTFS_MOUNT}/opt/agent

# bind agent with destination directory
mount -n --bind ${MOUSTACK_WORKDIR}/agent/target ${LXC_ROOTFS_MOUNT}/opt/agent
