#!/bin/sh

if [ -z "${LXC_NAME}" -o -z "${LXC_ROOTFS_MOUNT}" ]; then
	echo "This hook must be ran by lxc-start"
	exit 1
fi

# enter container's /dev
cd ${LXC_ROOTFS_MOUNT}/dev

# create tun device
mkdir net
mknod net/tun c 10 200
chmod 0666 net/tun

# create KVM device
mknod kvm c 10 232
chmod 0666 kvm
chown 0:124 kvm

# create mem device
mknod mem c 1 1
chmod 0640 mem
